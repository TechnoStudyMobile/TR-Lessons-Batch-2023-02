<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonRunBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run blocking" />


    <Button
        android:id="@+id/buttonGlobal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Scope" />


    <Button
        android:id="@+id/buttonContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Context" />


    <Button
        android:id="@+id/buttonNested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nested" />


    <Button
        android:id="@+id/buttonSuspend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspend" />


    <Button
        android:id="@+id/buttonAsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async" />

</LinearLayout>