<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailFragment">

    <ImageView
        android:id="@+id/ivMenuImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_menu_four"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/ivMenuImg"
        app:layout_constraintTop_toBottomOf="@id/ivMenuImg"
        tools:text="TITLE"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMenuAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvMenuTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvMenuTitle"
        app:layout_constraintEnd_toEndOf="@id/ivMenuImg"
        tools:text="AMOUNT"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMenuDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tvMenuTitle"
        app:layout_constraintTop_toBottomOf="@id/tvMenuTitle"
        app:layout_constraintEnd_toEndOf="@id/ivMenuImg"
        tools:text="DescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDesc"
        android:textSize="22sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>